@model List<Movie>

<h1>Index</h1>

<table class="table table-bordered ">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>
    </tr>
    @foreach (var movie in Model) 
    {
<tr>
    <td>@movie.Title</td>
    <td>@movie.Genre</td>
    <td>@movie.Runtime</td>

    <td><a href="Entertainment/DeleteMovie?id=@movie.Id" class="btn btn-danger">Delete Movie @movie.Title</a></td>
    <td><a href="Entertainment/MovieForm?id=@movie.Id" class="btn btn-danger">Edit Movie @movie.Title</a></td>
</tr>
    }
</table>

<a href="Entertainment/MovieForm" class="btn btn-dark">Add a movie</a>
